# Step 1: Build the React app
FROM node:20 AS build

# Set the working directory inside the container
WORKDIR /app

# Copy the package.json and package-lock.json files
COPY package.json package-lock.json ./

# Install the dependencies
RUN if [ ! -d "./node_modules" ]; then \
      npm install; \
    else \
      npm ci; \
    fi

# Accept build arguments
ARG REACT_APP_API_URL
ARG REACT_APP_API_PORT

# Set environment variables for React
ENV REACT_APP_API_URL=$REACT_APP_API_URL
ENV REACT_APP_API_PORT=$REACT_APP_API_PORT

# Copy the entire project to the container
COPY . .

# Build the app with the environment variables
RUN npx cross-env REACT_APP_API_URL=$REACT_APP_API_URL REACT_APP_API_PORT=$REACT_APP_API_PORT npx nx run web:build --configuration=production

# Step 2: Serve the built app using NGINX
FROM nginx:latest

# Create a custom NGINX configuration
RUN echo 'server { \
    listen 80; \
    server_name _; \
    root /usr/share/nginx/html; \
    index index.html; \
    location / { \
        try_files $uri $uri/ /index.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

# Copy the built app from the previous stage
COPY --from=build /app/dist/apps/web /usr/share/nginx/html

# Expose port 80 for the NGINX server
EXPOSE 80

# Start NGINX server
CMD ["nginx", "-g", "daemon off;"]